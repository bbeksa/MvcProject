@model MvcProject.Models.League

@{
    ViewData["Title"] = "Details";
}

<h1>League</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localization)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localization)
        </dd>
    </dl>
</div>
<div>
    <a style="border:2px; border-style:solid; border-color:#000000; padding: 2px;" asp-action="Edit" asp-route-id="@Model?.LeagueId">Edit</a> |
    <a style="border:2px; border-style:solid; border-color:#000000; padding: 2px;" asp-action="Index">Back to List</a>
</div>

<div class="form-group">
    <button type="button" onclick="replaceContentsOfDiv(this.id)" id="AddPartialToView">Show Seasons</button>
</div>

<div id="placeHolderDiv"></div>

<script>
    function replaceContentsOfDiv(partialViewToInsert) {
        $.ajax({
            url: '@Url.Action("AddPartialToView", "League")',
            data: { id: @Model.LeagueId},
            type: "POST",
            success: function(data) {
                $('#placeHolderDiv').html(data);
            }
        });
    }
</script>